extends /_layout

block content
  .container
    h1 Home
    #homeApp
      .row
        .col-sm-6
          h2 Play
          form(v-on:submit.prevent='goToGame')
            .form-group
              label Game Pin
              input.form-control(type='text' v-model='gamePin')
            button.btn.btn-primary(type='submit') Go
        .col-sm-6
          h2 New Game
          button.btn.btn-primary(type='button' v-on:click='newGame') New Game

block scripts
  script.
    const vm = new Vue({
      el: '#homeApp',
      data: {
        gamePin: '',
      },
      methods: {
        newGame() {
          window.location.href = '/game/new';
        },
        goToGame() {
          window.location.href = `/play/${this.gamePin}`;
        },
      }
    });
    